        </profile>
        <profile>
            <id>orchestration</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <profile.active>orchestration</profile.active>
            </properties>
        </profile>
        <profile>
            <id>sqltest</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <profile.active>sqltest</profile.active>
            </properties>
        </profile>
    </profiles>

