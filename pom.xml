    <profiles>
        <profile>
            <id>RWSplittingCombineSharding</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <profile.active>RWSplittingCombineSharding</profile.active>
            </properties>
        </profile>
        <profile>
            <id>complexSharding</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
